<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
 
<struts>
 
  <constant name="struts.devMode" value="true" />
  <constant name="struts.ui.theme" value="simple" />
  <constant name="struts.enable.DynamicMethodInvocation" value="true" />
  
  <package name="default" namespace="/" extends="struts-default" strict-method-invocation="true">
  
    <action name="game" class="gameAction" method="execute"> 
    <!-- 網址 http://localhost:8080/softleader-iii-sportslottery/game
    		 execute 是GameAction.java裡 的exectue()
    		 GameAction.java的位置需要去spring-struts.xml查                                                 -->
		<result name="success">/Match.jsp</result>
		<!-- execute()執行完成功後，就會執行Match.jsp --> 
		<result name="input">/Match.jsp</result>
		<result name="inserted">/Admin/match-list.jsp</result>
		<result name="insertFailed">/Admin/match-form.jsp</result>
		<allowed-methods>insert</allowed-methods>
	</action> 
	
	<action name="odds" class="oddsAction" method="execute"> 
		<result name="success">/jsonPoster.jsp</result>
		<result name="byGameId">/jsonPoster.jsp</result>
		<result name="input">/jsonPoster.jsp</result>
		<allowed-methods></allowed-methods>
	</action> 
	
	<action name="checkAccount" class="userAction" method="check">
		<result name="t">/Security/success.jsp</result>
		<result name="f">/Security/fail.jsp</result>
	</action>
	<action name="addAccount" class="userAction" method="insert">
		<result name="success">/index.jsp</result>
		<result name="FIAL">/Security/addUser.jsp</result>
		
	</action>
	
	
	<action name="team" class="teamAction" method="execute">
		<result name="success" type="stream">
			<param name="contentType">text/plain</param>
			<param name="inputName">inputStream</param>
		</result>
		<allowed-methods></allowed-methods>
	</action>
	<!--
	<action name="odds" class="oddsAction" method="execute">
		<result name="success">Json/oddsJson.jsp</result>
		<result name="input">Json/oddsJson.jsp</result>
		<allowed-methods>select,insert,update,delete</allowed-methods>
	</action>
	-->
  </package>
</struts>
